<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All devices
    </h1>

    <a href="/devices/new" class="btn btn-block btn-outline-secondary">
      Add a new device
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Photo
        </th>

        <th>
          Company
        </th>

        <th>
          Category
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @devices.each do |device| %>
      <tr>
        <!-- Display device.id start -->
        <td>
          <%= device.id %>
        </td>
        <!-- Display device.id end -->

        <!-- Display device.description start -->
        <td>
          <%= device.description %>
        </td>
        <!-- Display device.description end -->

        <!-- Display device.photo start -->
        <td>
          <img src='<%= device.photo %>' class='img-fluid'>
        </td>
        <!-- Display device.photo end -->

        <!-- Display device.company_id start -->
        <td>
          <%= device.company_id %>
        </td>
        <!-- Display device.company_id end -->

        <!-- Display device.category_id start -->
        <td>
          <%= device.category_id %>
        </td>
        <!-- Display device.category_id end -->

        <!-- Display device.created_at start -->
        <td>
          <%= time_ago_in_words(device.created_at) %> ago
        </td>
        <!-- Display device.created_at end -->

        <!-- Display device.updated_at start -->
        <td>
          <%= time_ago_in_words(device.updated_at) %> ago
        </td>
        <!-- Display device.updated_at end -->

        <td>
          <a href="/devices/<%= device.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
