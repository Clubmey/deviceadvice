<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All devices
    </h1>

    <a href="/devices/new" class="btn btn-block btn-outline-secondary">
      Add a new device
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "device_templates/devices_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Photo
        </th>

        <th>
          Company
        </th>

        <th>
          Category
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @devices.each do |device| %>
      <tr>
        <td>
          <%= device.id %>
        </td>

        <td>
          <%= device.description %>
        </td>

        <td>
          <img src='<%= device.photo %>' class='img-fluid'>
        </td>

        <td>
          <% if device.company.present? %>
            <a href="/companies/<%= device.company.id %>">
              <%= device.company.description %>
            </a>
          <% end %>
        </td>

        <td>
          <% if device.category.present? %>
            <a href="/categories/<%= device.category.id %>">
              <%= device.category.description %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(device.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(device.updated_at) %> ago
        </td>

        <td>
          <a href="/devices/<%= device.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @devices, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
