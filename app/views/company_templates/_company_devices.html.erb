<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Devices

    <a data-toggle="collapse" href="#company_devices_new_form">
      Add device
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @company.devices.each do |device| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/devices/<%= device.id %>">
          <%= device.description %>
        </a>
        <!-- Show link end -->

        <!-- Delete link start -->
        <a href="/delete_device_from_company/<%= device.id %>">
          Delete
        </a>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="company_devices_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "company_templates/company_devices_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
