<h1>
  Add a new review
</h1>


<hr>

<form action="/create_review" method="post">

  <div class="form-group">
    <label for="rating">
      Rating
    </label>

    <input type="text" id="rating" name="rating" class="form-control">
  </div>

  <div class="form-group">
    <label for="comments">
      Comments
    </label>

    <input type="text" id="comments" name="comments" class="form-control">
  </div>

  <div class="form-group">
    <label for="device_id">
      Device
    </label>

    <%= select_tag(:device_id, options_from_collection_for_select(Device.all, :id, :description, @review.device_id), :class => "form-control") %>
  </div>

  <input type="hidden" name="commenter_id" value="<%= current_user.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create review
  </button>
</form>

<hr>

<a href="/reviews">
  Go back
</a>
