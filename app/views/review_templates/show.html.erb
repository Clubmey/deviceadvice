<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Review #<%= @review.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/reviews" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @review.commenter %>
          <a href="/reviews/<%= @review.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit review
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @review.commenter %>
          <a href="/delete_review/<%= @review.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete review
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Rating
      </dt>
      <dd>
        <%= @review.rating %>
      </dd>

      <dt>
        Comments
      </dt>
      <dd>
        <%= @review.comments %>
      </dd>

      <dt>
        Device
      </dt>
      <dd>
        <% if @review.device.present? %>
          <a href="/devices/<%= @review.device_id %>">
            <%= @review.device.description %>
          </a>
        <% end %>
      </dd>

      <dt>
        Commenter
      </dt>
      <dd>
        <% if @review.commenter.present? %>
          <a href="/users/<%= @review.commenter_id %>">
            <%= @review.commenter.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@review.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@review.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

