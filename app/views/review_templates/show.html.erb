<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Review #<%= @review.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/reviews" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link review start -->
      <div class="col">
        <a href="/reviews/<%= @review.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit review
        </a>
      </div>
      <!-- Edit link review end -->

      <!-- Delete link review start -->
      <div class="col">
        <a href="/delete_review/<%= @review.id %>" class="btn btn-block btn-outline-secondary">
          Delete review
        </a>
      </div>
      <!-- Delete link review end -->
    </div>

    <dl>
      <dt>
        Rating
      </dt>
      <!-- Display rating start -->
      <dd>
        <%= @review.rating %>
      </dd>
      <!-- Display rating end -->

      <dt>
        Comments
      </dt>
      <!-- Display comments start -->
      <dd>
        <%= @review.comments %>
      </dd>
      <!-- Display comments end -->

      <dt>
        Device
      </dt>
      <!-- Display device_id start -->
      <dd>
        <%= @review.device_id %>
      </dd>
      <!-- Display device_id end -->

      <dt>
        Commenter
      </dt>
      <!-- Display commenter_id start -->
      <dd>
        <%= @review.commenter_id %>
      </dd>
      <!-- Display commenter_id end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@review.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@review.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

